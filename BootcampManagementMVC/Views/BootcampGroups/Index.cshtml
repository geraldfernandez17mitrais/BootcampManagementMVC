@using BootcampManagementMVC.BL.Dtos.BootcampGroups
@model IEnumerable<BootcampGroupAndTotalMemberDto>

@{
    ViewData["Title"] = "Bootcamp";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 style="text-align: center;">Mitrais Bootcamp</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create
        </a>
        <table class="table">
            <thead>
                <tr class="text-left">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.CountMember)</th>
                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CountMember)
                        </td>
                        <td class="align-middle">
                            @if (item.IsActive == true)
                            {
                                <label class="text-success">Active</label>
                            }
                            else
                            {
                                <label class="text-danger">Inactive</label>
                            }
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>